<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HelpMyFriendActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Snow"
            tools:layout_editor_absoluteY="50dp"
            tools:layout_editor_absoluteX="5dp"
            >
        <EditText
                android:layout_width="340dp"
                android:layout_height="55dp"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/editText4"
                android:hint="Friend's Phone Number"
                android:layout_marginTop="15dp"/>
        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RadioButton
                    android:text="Verbal Abuse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioButton7"
                    android:layout_marginTop="15dp" android:textSize="18sp"/>
            <RadioButton
                    android:text="Depression"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/radioButton6"
                    android:layout_marginTop="15dp" android:textSize="18sp"/>
            <RadioButton
                    android:text="Ragging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioButton8"
                    android:layout_marginTop="15dp" android:textSize="18sp"/>
            <RadioButton
                    android:text="Stress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioButton9" android:textSize="18sp"
                    android:layout_marginTop="15dp"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioButton10"
                    android:layout_marginTop="15dp" android:textSize="18sp" android:text="Physical Abuse"/>
            <RadioButton
                    android:text="Mental Harassment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioButton11" android:textSize="18sp"
                    android:layout_marginTop="15dp"/>
        </RadioGroup>
        <EditText
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText5"
                android:hint="Message" android:layout_marginTop="2dp" android:layout_width="wrap_content"
                android:paddingTop="100px" android:paddingBottom="120px" android:textSize="18sp"
        />
        <Button
                android:text="Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button3" android:onClick="hmsf"
                android:layout_marginLeft="141dp" android:layout_marginTop="7dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>