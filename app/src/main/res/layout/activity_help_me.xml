<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HelpMeActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RadioButton
                    android:text="Depression"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioButton1" android:layout_weight="1"
                    android:textSize="18sp" android:layout_marginTop="20dp"/>
            <RadioButton
                    android:text="Verbal Abuse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_weight="1"
                    android:layout_marginTop="20dp" android:textSize="18sp"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioButton3" android:layout_weight="1"
                    android:text="Ragging" android:textSize="18sp" android:layout_marginTop="20dp"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioButton4" android:layout_weight="1"
                    android:layout_marginTop="20dp" android:textSize="18sp" android:text="Pressure"/>
            <RadioButton
                    android:text="Physical Abuse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioButton" android:layout_weight="1"
                    android:textSize="18sp" android:layout_marginTop="25dp"/>
            <RadioButton
                    android:text="Mental harassment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioButton5" android:layout_weight="1"
                    android:layout_marginTop="25dp" android:textSize="18sp"/>
        </RadioGroup>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText3" android:paddingBottom="120px" android:hint="Message"
                android:paddingTop="100px" android:layout_marginTop="25dp" android:textSize="18sp"/>
        <Button
                android:text="Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button" android:layout_marginTop="50dp"
                android:onClick="hms" android:textSize="24sp" android:layout_marginLeft="141dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>